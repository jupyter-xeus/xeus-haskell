# xeus-haskell cmake module
# This module sets the following variables in your project::
#
#   xeus-haskell_FOUND - true if xeus-haskell was found on the system
#   xeus-haskell_INCLUDE_DIRS - the directory containing xeus-haskell headers
#   xeus-haskell_LIBRARY - the library for dynamic linking
#   xeus-haskell_STATIC_LIBRARY - the library for static linking

@PACKAGE_INIT@

set(CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR};${CMAKE_MODULE_PATH}")

@XEUS_HASKELL_CONFIG_CODE@

include(CMakeFindDependencyMacro)
find_dependency(xtl @xtl_REQUIRED_VERSION@)
find_dependency(xeus-zmq @xeus-zmq_REQUIRED_VERSION@)
find_dependency(cppzmq @cppzmq_REQUIRED_VERSION@)


if (NOT TARGET xeus-haskell AND NOT TARGET xeus-haskell-static)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

    if (TARGET xeus-haskell AND TARGET xeus-haskell-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-haskell INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-haskell LOCATION)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-haskell-static LOCATION)
    elseif (TARGET xeus-haskell)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-haskell INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-haskell LOCATION)
    elseif (TARGET xeus-haskell-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-haskell-static INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-haskell-static LOCATION)
        set(@PROJECT_NAME@_LIBRARY ${@PROJECT_NAME@_STATIC_LIBRARY})
    endif ()
endif ()
